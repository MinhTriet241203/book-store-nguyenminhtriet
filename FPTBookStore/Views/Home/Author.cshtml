Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- css -->
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="~/css/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css" media="all" />
    <!--// css -->
    <!-- font -->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!-- //font -->
    <script src="~/js/jquery-1.11.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
</head>
<body>
    <partial name="Header" />
    <div class="content" style="padding: 10px 0; background-color: whitesmoke">
        <h1>Authors</h1>
        <div class="d-flex justify-content-center mt-3">
            <form asp-controller="Home" asp-action="Author" style="width:50%">
                <div class="input-group">
                    <input class="form-control rounded" placeholder="Search for authors" type="search" name="SearchString" style="margin: 0 auto; width:85%" />
                    <button type="submit" class="btn btn-success">search</button>
                </div>
            </form>
        </div>
        <hr style="width: 90%; margin: 20px auto 20px auto" />
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <a href="AuthorSingle/@Html.DisplayFor(modelItem => item.AuthorId)">
                        <div class="card h-100  ">
                            <!-- Author image-->
                            <img class="card-img-top" src=" @Html.DisplayFor(modelItem => item.Image)" style="padding: 5px; border-radius: 10px;" height="300px" />
                            <!-- Author details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Author name-->
                                    <h5 class="fw-bolder">@Html.DisplayFor(modelItem => item.AuthorName)</h5>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

    </div>
    <hr />
    <div class="footer">
        <div class="container">
        </div>
    </div>
    <!-- cart-js -->
    <script src="~/js/minicart.js"></script>
    <script>
        w3ls1.render();

        w3ls1.cart.on('w3sb1_checkout', function (evt) {
            var items, len, i;

            if (this.subtotal() > 0) {
                items = this.items();

                for (i = 0, len = items.length; i < len; i++) {
                    items[i].set('shipping', 0);
                    items[i].set('shipping2', 0);
                }
            }
        });
    </script>
    <!-- //cart-js -->
</body>
</html>